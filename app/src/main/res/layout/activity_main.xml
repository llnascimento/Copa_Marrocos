            app:srcCompat="@drawable/bandeira"
            tools:srcCompat="@drawable/bandeira" />

        <TextView
            android:id="@+id/text_marrocos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:text="@string/text_pais"
            app:layout_constraintStart_toStartOf="@id/selecoes_card" />


        <TextView
            android:id="@+id/text_datacard_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="7dp"
            android:text="@string/data_01"
            app:layout_constraintStart_toStartOf="@id/text_marrocos" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:text="@string/text_adversario1" />

        <ImageView
            android:id="@+id/selecoesadve_card01"
            android:layout_width="61dp"
            android:layout_height="56dp"
            android:layout_marginLeft="315dp"
            android:padding="10dp"
            app:srcCompat="@drawable/bandeira02"
            tools:srcCompat="@drawable/bandeira02" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.728">

        <ImageView
            android:id="@+id/selecoes_card02"
            android:layout_width="61dp"
            android:layout_height="56dp"
            android:padding="10dp"
            app:srcCompat="@drawable/bandeira04"
            tools:srcCompat="@drawable/bandeira04" />

        <TextView
            android:id="@+id/text_marrocos02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="8dp"
