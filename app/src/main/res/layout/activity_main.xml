        <TextView
            android:id="@+id/text_marrocos03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:text="@string/text_pais"
            app:layout_constraintStart_toStartOf="@id/selecoes_card" />


        <TextView
            android:id="@+id/text_datacard_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="7dp"
            android:text="@string/data_03"
            app:layout_constraintStart_toStartOf="@id/text_marrocos" />

        <TextView
            android:layout_width="wrap_content"
